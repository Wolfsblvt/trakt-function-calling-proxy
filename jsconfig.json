{
"compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true
},
"include": [
    "**/*.js"
],
"exclude": [
    "**/node_modules/**"
]
}